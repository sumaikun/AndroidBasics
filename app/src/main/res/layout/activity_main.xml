<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jesus.estudio.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="86dp"
        android:layout_marginTop="33dp"
        android:text="@string/text1"
        app:layout_constraintBottom_toTopOf="@+id/Btnarndemo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="55dp"
        android:text="Next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btnarndemo"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="110dp"
        android:text="ARN demo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/Btnstate"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="170dp"
        android:text="Estados"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnBarcode"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="230dp"
        android:text="Codigo barras"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btnlights"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="290dp"
        android:text="Animación de semáforo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
